<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#E5E4E2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Consutlar asistencias"
        android:layout_marginTop="30dp"
        android:textSize="22dp"
        android:textStyle="bold" />




    <!-- Línea inferior -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />
    <!-- Título: Horario -->


    <!-- Contenedor para el selector de clase -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="16dp">

        <!-- Etiqueta Curso -->
        <TextView
            android:id="@+id/class_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso: 2024 - 2025"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />
        <Spinner
            android:id="@+id/year_selector_profe"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_spinner"

            android:padding="8dp" />

    </LinearLayout>

    <!-- Imagen del horario -->

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>
    <!-- Botón editar horario -->

    <!-- Botón Descargar PDF -->
    <ImageView
        android:id="@+id/logoBWImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_blanconegro"
        android:layout_marginEnd="20dp"
        android:contentDescription="Logo"
        android:layout_gravity="end" />


    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_gravity="bottom"
        android:padding="8dp"
        android:elevation="8dp">

        <!-- Botón Horario -->
        <Button
            android:id="@+id/btn_schedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_horario"
            android:drawablePadding="8dp"
            android:background="@null"
            android:text="Horario"
            android:textSize="12sp"
            android:textColor="#000000"
            android:backgroundTint="@color/white"
            android:gravity="center" />

        <!-- Botón Asistencias -->
        <Button
            android:id="@+id/btn_attendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_asistencia_azul"
            android:drawablePadding="8dp"
            android:background="@null"
            android:text="Asistencias"
            android:textSize="12sp"
            android:textColor="#2596BE"
            android:backgroundTint="@color/white"
            android:gravity="center" />

        <!-- Botón Perfil -->
        <Button
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_perfil"
            android:drawablePadding="8dp"
            android:background="@null"
            android:text="Perfil"
            android:textSize="12sp"
            android:textColor="#000000"
            android:backgroundTint="@color/white"
            android:gravity="center" />

    </LinearLayout>


</LinearLayout>