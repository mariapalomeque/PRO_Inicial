<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="0dp">

    <!-- Línea separadora blanca -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- Título: Horario -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Selector de clase -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/class_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/class_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_spinner"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Imagen del horario -->
    <ImageView
        android:id="@+id/schedule_table"
        android:layout_width="match_parent"
        android:layout_height="386dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:contentDescription="Tabla de horario"
        android:scaleType="fitCenter"
        android:src="@drawable/horario_alumno" />

    <!-- Botón Descargar PDF -->
    <Button
        android:id="@+id/download_pdf_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descargar PDF"
        android:layout_margin="16dp"
        android:backgroundTint="#0077C8"
        android:textColor="#FFFFFF" />

    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:elevation="8dp">

        <!-- Botón Horario -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/nav_schedule_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_horario_azul"
                android:contentDescription="Horario" />

            <TextView
                android:id="@+id/nav_schedule_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Botón Asistencias -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/nav_attendance_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_asistencias"
                android:contentDescription="Asistencias" />

            <TextView
                android:id="@+id/nav_attendance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asistencias"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Botón Perfil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/nav_profile_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Perfil"
                android:src="@drawable/ic_perfil" />

            <TextView
                android:id="@+id/nav_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
