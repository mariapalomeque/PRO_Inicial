<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#E5E4E2">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Registro nuevo alumno"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Contenedor de formulario -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="16dp">

            <!-- Campo Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Nombre:"
                android:textColor="#000000"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/nameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text"
                android:hint="Introduce tu nombre"
                android:padding="12dp" />

            <!-- Campo Apellidos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Apellidos:"
                android:textColor="#000000"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/apellidosField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text"
                android:hint="Introduce tus apellidos"
                android:padding="12dp" />

            <!-- Campo Teléfono -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Teléfono:"
                android:textColor="#000000"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/telfField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text"
                android:hint="Introduce tu teléfono"
                android:padding="12dp" />

            <!-- Campo Correo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Correo:"
                android:textColor="#000000"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text"
                android:hint="Introduce tu correo"
                android:padding="12dp" />

            <!-- Campo Contraseña -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Contraseña:"
                android:textColor="#000000"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/passwordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text"
                android:hint="Introduce tu contraseña"
                android:inputType="textPassword"
                android:padding="12dp" />

            <!-- Confirmar Contraseña -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Confirmar contraseña:"
                android:textColor="#000000"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/confirmPasswordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text"
                android:hint="Confirma tu contraseña"
                android:inputType="textPassword"
                android:padding="12dp" />

            <!-- Spinner de asignaturas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="Asignatura:"
                android:textColor="#000000"
                android:textSize="16sp" />
            <Spinner
                android:id="@+id/subjectSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_spinner"
                android:padding="12dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Botón Crear cuenta y logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Botón Crear cuenta -->
        <Button
            android:id="@+id/create_account_buttt"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:backgroundTint="#2596BE"
            android:text="Crear cuenta"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoBWImage"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:contentDescription="Logo"
            android:src="@drawable/logo_blanconegro" />
    </LinearLayout>

    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_horario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_horario"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="Horario"
            android:textColor="#000000"
            android:textSize="12sp" />
        <Button
            android:id="@+id/btn_registro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_registro_azul"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="Registro"
            android:textColor="#2596BE"
            android:textSize="12sp" />
        <Button
            android:id="@+id/btn_asistencias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_asistencias"
            android:drawablePadding="9dp"
            android:gravity="center"
            android:text="Asistencias"
            android:textColor="#000000"
            android:textSize="12sp" />
        <Button
            android:id="@+id/btn_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_perfil"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="Perfil"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
