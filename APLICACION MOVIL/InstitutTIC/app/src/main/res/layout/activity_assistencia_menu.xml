<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#E5E4E2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Asistencias"
        android:layout_marginTop="30dp"
        android:textSize="22dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:text="¿Que deseas ver ahora?"
        android:textSize="32dp"/>


    <!-- Línea superior -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="20dp" />

    <!-- Botón Asistencias HOY -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/asistenciasHoy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Asistencias HOY"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Línea inferior -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

    <!-- Botón Consultar Asistencias -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/consultaasistencia" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Consultar Asistencias"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Línea inferior -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />


    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:layout_marginBottom="50dp"
        android:text="En caso de error, por favor contacte con el administrador a través del correo electrónico: admin@gmail.com."
        android:textSize="14dp"/>


    <ImageView
        android:id="@+id/logoBWImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_blanconegro"
        android:layout_marginEnd="20dp"
        android:contentDescription="Logo"
        android:layout_gravity="end" />


    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_gravity="bottom"
        android:padding="8dp"
        android:elevation="8dp">

        <!-- Botón Horario -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/nav_schedule_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_horario"
                android:contentDescription="Horario" />

            <TextView
                android:id="@+id/nav_schedule_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Botón Asistencias -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/nav_attendance_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_asistencia_azul"
                android:contentDescription="Asistencias" />

            <TextView
                android:id="@+id/nav_attendance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asistencias"
                android:textSize="12sp"
                android:textColor="#2596BE"
                android:gravity="center" />
        </LinearLayout>

        <!-- Botón Perfil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/nav_profile_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Perfil"
                android:src="@drawable/ic_perfil" />

            <TextView
                android:id="@+id/nav_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>