<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#E5E4E2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Asistencias"
        android:layout_marginTop="30dp"
        android:textSize="22dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="¿Que deseas ver ahora?"
        android:textSize="28dp"/>


    <!-- Línea superior -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#E5E4E2">

        <!-- Ícono  -->
        <ImageButton
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="8dp"
            android:padding="6dp"
            android:backgroundTint="#2596BE"
            android:background="@drawable/rounded_box_background"
            android:src="@drawable/asistenciashoy" />


        <!-- Botón con texto -->
        <Button
            android:id="@+id/btn_asistencias_hoy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="start|center_vertical"
            android:text="Asistencias HOY"
            android:textColor="#000000"
            android:backgroundTint="#E5E4E2"
            android:textSize="18sp"
            android:padding="8dp" />
    </LinearLayout>


    <!-- Línea inferior -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

    <!-- Botón Consultar Asistencias -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#E5E4E2">

        <!-- Ícono  -->
        <ImageButton
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="8dp"
            android:padding="6dp"
            android:backgroundTint="#2596BE"
            android:background="@drawable/rounded_box_background"            android:src="@drawable/consultaasistencia" />

        <!-- Botón con texto -->
        <Button
            android:id="@+id/btn_consultar_asssistencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="start|center_vertical"
            android:text="Consultar asistencias "
            android:textColor="#000000"
            android:backgroundTint="#E5E4E2"
            android:textSize="18sp"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Línea inferior -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />


    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:text="En caso de error, por favor contacte con el administrador a través del correo electrónico: admin@gmail.com."
        android:textSize="14dp"/>


    <ImageView
        android:id="@+id/logoBWImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_blanconegro"
        android:layout_marginEnd="20dp"
        android:contentDescription="Logo"
        android:layout_gravity="end" />

    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_gravity="bottom"
        android:padding="8dp"
        android:elevation="8dp">

        <!-- Botón Horario -->
        <Button
            android:id="@+id/btn_schedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_horario"
            android:drawablePadding="8dp"
            android:background="@null"
            android:text="Horario"
            android:textSize="12sp"
            android:textColor="#000000"
            android:backgroundTint="@color/white"
            android:gravity="center" />

        <!-- Botón Asistencias -->
        <Button
            android:id="@+id/btn_attendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_asistencia_azul"
            android:drawablePadding="8dp"
            android:background="@null"
            android:text="Asistencias"
            android:textSize="12sp"
            android:textColor="#2596BE"
            android:backgroundTint="@color/white"
            android:gravity="center" />

        <!-- Botón Perfil -->
        <Button
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_perfil"
            android:drawablePadding="8dp"
            android:background="@null"
            android:text="Perfil"
            android:textSize="12sp"
            android:textColor="#000000"
            android:backgroundTint="@color/white"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>